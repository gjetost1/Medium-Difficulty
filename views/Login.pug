extends layout

mixin form
    form(action="/Login" method='POST' class="form__login")
        label(class="form__label__login__useridentification") ENTER USERNAME/EMAIL
        input(class="form__input__login__useridentification" style='border: 1px solid black; border-radius: 5px' type='text' name='userIdentification' id='userIdentification' value=userIdentification)

        label(class="form__label__login__password") ENTER PASSWORD
        input(class="form__input__login__password" style='border: 1px solid black; border-radius: 5px' type='password' name='password' id='password')

        input(type='hidden' name='_csrf' value=csrfToken)
        button(class="form__button__submit__login" id='formS' type='submit' style='border-radius: 5px;') Log in

        button(class="form__button__submit__login__demo") Demo User

mixin error
    div(class="div__errors__login")
        if errors
            each error in errors
                p(class="div__p__error__login")=error

mixin container
    div(class="login__div__container")
        +form

append head
    style
        include ../public/stylesheets/login.css
    script
        include ../public/javascripts/login.js

block content
    +form
        +error
